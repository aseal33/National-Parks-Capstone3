@model Surveys
@{
    ViewData["Title"] = "Survey";
}

<h2>Survey</h2>

<form asp-controller="home" asp-action="SurveyResults" method="post">
    @*<label asp-for="ParkCode">Favorite National Park: </label>
    <select asp-for="ParkCode" asp-items="" />*@

    <label asp-for="EmailAddress">Email Address: </label>
    <input type="text" name="EmailAddress">

    <label asp-for="State">State of Residence: </label>
    <input type="text" name="lastname">

    <label asp-for="ActivityLevel">Activity Level: </label>

        <input type="radio" id="inactive" name="drone" value="inactive" checked>
        <label for="inactive">Inactive</label>

        <input type="radio" id="sedentary" name="drone" value="sedentary">
        <label for="sedentary">sedentary</label>

        <input type="radio" id="active" name="drone" value="active">
        <label for="active">Active</label>

        <input type="radio" id="extremelyActive" name="drone" value="extremelyActive">
        <label for="extremelyActive">Extremely Active</label>


    <input type="submit" value="Submit">
</form> 